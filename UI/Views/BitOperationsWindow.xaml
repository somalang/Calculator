<Window x:Class="Calculator.UI.Views.BitOperationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Calculator.UI.ViewModels"

        Title="64-Bit Operations Calculator"
        Height="1000"
        Width="842"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        MinHeight="600"
        MinWidth="500"
        Background="White">

    <Window.DataContext>
        <vm:BitOperationsViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#D0D0D0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OperationButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#4A90E2" />
            <Setter Property="Foreground" Value="White" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AdvancedOperationButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#9B59B6" />
            <Setter Property="Foreground" Value="White" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#8E44AD" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FunctionButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#E8F4FD" />
            <Setter Property="Foreground" Value="#2E7D32" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D1E7DD" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ClearButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#FF6B6B" />
            <Setter Property="Foreground" Value="White" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF5252" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DisplayTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="0,2" />
            <Setter Property="BorderBrush" Value="#D0D0D0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="#FAFAFA" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="TextAlignment" Value="Right" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Height" Value="30" />
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="BorderBrush" Value="#4A90E2" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Background" Value="White" />
            <Setter Property="TextAlignment" Value="Right" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Height" Value="50" />
        </Style>

    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Button
            Command="{Binding OpenMenuCommand}" 
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" 
            Style="{StaticResource FunctionButtonStyle}"
            Background="Transparent"
            BorderThickness="0"
            Padding="0"
            HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal">
                <Ellipse Width="8" Height="8" Fill="#D0D0D0" Margin="3,0" />
                <Ellipse Width="8" Height="8" Fill="#D0D0D0" Margin="3,0" />
                <Ellipse Width="8" Height="8" Fill="#D0D0D0" Margin="3,0" />
            </StackPanel>
        </Button>
        <TextBlock Grid.Row="0" Text="64-Bit Operations Calculator" 
                   FontSize="18" FontWeight="SemiBold" 
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <Button Grid.Column="1" Width="30" Height="30" 
             Command="{Binding ShowHistoryCommand}"
             Style="{StaticResource FunctionButtonStyle}"
             HorizontalAlignment="Right" Margin="5,0,0,0">
            <Viewbox Width="16" Height="16">
                <Canvas Width="24" Height="24">
                    <Path Fill="Black"  
                     Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M16.2,16.2L11,13V7H12.5V12.2L17,14.7L16.2,16.2Z"/>
                </Canvas>
            </Viewbox>
        </Button>

        <!-- Current Operation Display -->
        <Border Grid.Row="1" Background="#2C2C2C" CornerRadius="6" Padding="10" Margin="0,0,0,10">
            <TextBlock Text="{Binding CurrentOperation, StringFormat='Current Operation: {0}'}" 
                       Foreground="White" FontSize="14" FontWeight="SemiBold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Input Section -->
        <GroupBox Grid.Row="2" Header="Operands" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Operand A -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="A:" FontWeight="SemiBold" 
                           VerticalAlignment="Center" Width="25" />
                <TextBox x:Name="OperandATextBox" Grid.Row="0" Grid.Column="1" 
                         Text="{Binding OperandAInput, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource InputTextBoxStyle}"
                         GotFocus="OperandA_GotFocus"
                         LostFocus="OperandA_LostFocus" />

                <Button Grid.Row="0" Grid.Column="2" Content="Clear A" 
                        Command="{Binding ClearACommand}"
                        Style="{StaticResource ClearButtonStyle}" 
                        Width="60" Margin="5,0,5,0" />

                <TextBlock Grid.Row="0" Grid.Column="3" Text="BIN:" FontWeight="SemiBold" 
                           VerticalAlignment="Center" Width="35" Margin="5,0,5,0" />
                <TextBox Grid.Row="0" Grid.Column="4" Text="{Binding OperandABinary, Mode=OneWay}"
                         Style="{StaticResource DisplayTextBoxStyle}" />

                <TextBlock Grid.Row="0" Grid.Column="5" Text="HEX:" FontWeight="SemiBold" 
                           VerticalAlignment="Center" Width="35" Margin="10,0,5,0" />
                <TextBox Grid.Row="0" Grid.Column="6" Text="{Binding OperandAHex, Mode=OneWay}"
                         Style="{StaticResource DisplayTextBoxStyle}" />

                <!-- Operand B -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="B:" FontWeight="SemiBold" 
                           VerticalAlignment="Center" Width="25" />
                <TextBox x:Name="OperandBTextBox" Grid.Row="1" Grid.Column="1" 
                         Text="{Binding OperandBInput, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource InputTextBoxStyle}"
                         GotFocus="OperandB_GotFocus"
                         LostFocus="OperandB_LostFocus"/>

                <Button Grid.Row="1" Grid.Column="2" Content="Clear B" 
                        Command="{Binding ClearBCommand}"
                        Style="{StaticResource ClearButtonStyle}" 
                        Width="60" Margin="5,0,5,0" />

                <TextBlock Grid.Row="1" Grid.Column="3" Text="BIN:" FontWeight="SemiBold" 
                           VerticalAlignment="Center" Width="35" Margin="5,0,5,0" />
                <TextBox Grid.Row="1" Grid.Column="4" Text="{Binding OperandBBinary, Mode=OneWay}"
                         Style="{StaticResource DisplayTextBoxStyle}" />

                <TextBlock Grid.Row="1" Grid.Column="5" Text="HEX:" FontWeight="SemiBold" 
                           VerticalAlignment="Center" Width="35" Margin="10,0,5,0" />
                <TextBox Grid.Row="1" Grid.Column="6" Text="{Binding OperandBHex, Mode=OneWay}"
                         Style="{StaticResource DisplayTextBoxStyle}" />

                <!-- Swap Button Row -->
                <Button Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" 
                        Content="Swap A ↔ B" Command="{Binding SwapCommand}"
                        Style="{StaticResource FunctionButtonStyle}" 
                        Margin="0,10,0,0" Height="30" />
            </Grid>
        </GroupBox>

        <!-- Basic Operations Section -->
        <GroupBox Grid.Row="3" Header="Basic Operations" Padding="10" Margin="0,0,0,10">
            <UniformGrid Rows="2" Columns="4">
                <Button Content="AND (A &amp; B)" Command="{Binding AndCommand}" 
                        Style="{StaticResource OperationButtonStyle}" />
                <Button Content="OR (A | B)" Command="{Binding OrCommand}" 
                        Style="{StaticResource OperationButtonStyle}" />
                <Button Content="XOR (A ^ B)" Command="{Binding XorCommand}" 
                        Style="{StaticResource OperationButtonStyle}" />
                <Button Content="NOT A (~A)" Command="{Binding NotACommand}" 
                        Style="{StaticResource OperationButtonStyle}" />

                <Button Content="NAND (~(A &amp; B))" Command="{Binding NandCommand}" 
                        Style="{StaticResource AdvancedOperationButtonStyle}" />
                <Button Content="NOR (~(A | B))" Command="{Binding NorCommand}" 
                        Style="{StaticResource AdvancedOperationButtonStyle}" />
                <Button Content="NXOR (~(A ^ B))" Command="{Binding NxorCommand}" 
                        Style="{StaticResource AdvancedOperationButtonStyle}" />
                <Button Content="NOT B (~B)" Command="{Binding NotBCommand}" 
                        Style="{StaticResource OperationButtonStyle}" />
            </UniformGrid>
        </GroupBox>

        <!-- Shift Operations Section -->
        <GroupBox Grid.Row="4" Header="Shift Operations" Padding="10" Margin="0,0,0,10">
            <UniformGrid Rows="1" Columns="2">
                <Button Content="Left Shift (A &lt;&lt; B)" Command="{Binding LeftShiftCommand}" 
                        Style="{StaticResource OperationButtonStyle}" />
                <Button Content="Right Shift (A >> B)" Command="{Binding RightShiftCommand}" 
                        Style="{StaticResource OperationButtonStyle}" />
            </UniformGrid>
        </GroupBox>

        <!-- Result Section -->
        <GroupBox Grid.Row="5" Header="Result" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="DEC:" FontWeight="SemiBold" 
                   VerticalAlignment="Center" Width="50" />
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ResultDecimal, Mode=OneWay}" 
                 Style="{StaticResource DisplayTextBoxStyle}" FontSize="16" Height="35" />

                <TextBlock Grid.Row="1" Grid.Column="0" Text="HEX:" FontWeight="SemiBold" 
                   VerticalAlignment="Center" Width="50" />
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ResultHex, Mode=OneWay}" 
                 Style="{StaticResource DisplayTextBoxStyle}" FontSize="16" Height="35" />

                <TextBlock Grid.Row="2" Grid.Column="0" Text="BIN:" FontWeight="SemiBold" 
                   VerticalAlignment="Top" Width="50" Margin="0,5,0,0" />
                <ScrollViewer Grid.Row="2" Grid.Column="1" VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Auto" Margin="0,2" Height="60">
                    <TextBox Text="{Binding ResultBinary, Mode=OneWay}" 
                     Style="{StaticResource DisplayTextBoxStyle}"
                     FontFamily="Consolas" FontSize="12"
                     TextWrapping="Wrap" Height="Auto" />
                </ScrollViewer>
            </Grid>
        </GroupBox>

        <!-- Number Pad Section -->
        <GroupBox Grid.Row="6" Header="Number Pad" Padding="10" Margin="0,0,0,10">
            <UniformGrid Rows="4" Columns="3">
                <!-- Row 1 -->
                <Button Content="7" Command="{Binding NumberCommand}" CommandParameter="7" Style="{StaticResource FunctionButtonStyle}" Focusable="False"/>
                <Button Content="8" Command="{Binding NumberCommand}" CommandParameter="8" Style="{StaticResource FunctionButtonStyle}" Focusable="False"/>
                <Button Content="9" Command="{Binding NumberCommand}" CommandParameter="9" Style="{StaticResource FunctionButtonStyle}" Focusable="False"/>

                <!-- Row 2 -->
                <Button Content="4" Command="{Binding NumberCommand}" CommandParameter="4" Style="{StaticResource FunctionButtonStyle}" Focusable="False"/>
                <Button Content="5" Command="{Binding NumberCommand}" CommandParameter="5" Style="{StaticResource FunctionButtonStyle}" Focusable="False"/>
                <Button Content="6" Command="{Binding NumberCommand}" CommandParameter="6" Style="{StaticResource FunctionButtonStyle}" Focusable="False"/>

                <!-- Row 3 -->
                <Button Content="1" Command="{Binding NumberCommand}" CommandParameter="1" Style="{StaticResource FunctionButtonStyle}" Focusable="False"/>
                <Button Content="2" Command="{Binding NumberCommand}" CommandParameter="2" Style="{StaticResource FunctionButtonStyle}" Focusable="False"/>
                <Button Content="3" Command="{Binding NumberCommand}" CommandParameter="3" Style="{StaticResource FunctionButtonStyle}" Focusable="False"/>

                <!-- Row 4 -->
                <Button Content="+/-" Command="{Binding ToggleSignCommand}" Style="{StaticResource FunctionButtonStyle}" Focusable="False"/>
                <Button Content="0" Command="{Binding NumberCommand}" CommandParameter="0" Style="{StaticResource FunctionButtonStyle}" Focusable="False"/>
                <Button Content="⌫" Command="{Binding BackspaceCommand}" Style="{StaticResource FunctionButtonStyle}" Focusable="False"/>
            </UniformGrid>
        </GroupBox>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Clear All" Command="{Binding ClearCommand}" 
            Style="{StaticResource ClearButtonStyle}" Width="100" Margin="0,0,10,0" />
            <Button Content="Close" Click="CloseButton_Click" 
            Style="{StaticResource OperationButtonStyle}" Width="100" />
        </StackPanel>

    </Grid>
</Window>