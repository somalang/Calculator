<Window x:Class="Calculator.UI.Views.CalculatorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Calculator.UI.ViewModels"
        Title="계산기" Height="500" Width="350"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:CalculatorViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 디스플레이 -->
        <Border Grid.Row="0" Background="Black" BorderBrush="Gray" BorderThickness="2" 
                CornerRadius="5" Padding="10">
            <TextBox Text="{Binding Display, Mode=OneWay}" 
                     FontSize="24" FontWeight="Bold" Foreground="White" Background="Black"
                     BorderThickness="0" IsReadOnly="True" TextAlignment="Right"
                     VerticalAlignment="Center"/>
        </Border>

        <!-- 버튼 그리드 -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 첫 번째 행 -->
            <Button Grid.Row="0" Grid.Column="0" Content="CE" Command="{Binding ClearCommand}" 
                    Style="{StaticResource FunctionButtonStyle}"/>
            <Button Grid.Row="0" Grid.Column="1" Content="C" Command="{Binding ClearAllCommand}" 
                    Style="{StaticResource FunctionButtonStyle}"/>
            <Button Grid.Row="0" Grid.Column="2" Content="⌫" Command="{Binding BackspaceCommand}" 
                    Style="{StaticResource FunctionButtonStyle}"/>
            <Button Grid.Row="0" Grid.Column="3" Content="/" Command="{Binding OperatorCommand}" 
                    CommandParameter="/" Style="{StaticResource OperatorButtonStyle}"/>

            <!-- 두 번째 행 -->
            <Button Grid.Row="1" Grid.Column="0" Content="(" Command="{Binding LeftParenCommand}" 
                    Style="{StaticResource FunctionButtonStyle}"/>
            <Button Grid.Row="1" Grid.Column="1" Content=")" Command="{Binding RightParenCommand}" 
                    Style="{StaticResource FunctionButtonStyle}"/>
            <Button Grid.Row="1" Grid.Column="2" Content="√" Command="{Binding SqrtCommand}" 
                    Style="{StaticResource FunctionButtonStyle}"/>
            <Button Grid.Row="1" Grid.Column="3" Content="*" Command="{Binding OperatorCommand}" 
                    CommandParameter="*" Style="{StaticResource OperatorButtonStyle}"/>

            <!-- 세 번째 행 -->
            <Button Grid.Row="2" Grid.Column="0" Content="7" Command="{Binding NumberCommand}" 
                    CommandParameter="7" Style="{StaticResource NumberButtonStyle}"/>
            <Button Grid.Row="2" Grid.Column="1" Content="8" Command="{Binding NumberCommand}" 
                    CommandParameter="8" Style="{StaticResource NumberButtonStyle}"/>
            <Button Grid.Row="2" Grid.Column="2" Content="9" Command="{Binding NumberCommand}" 
                    CommandParameter="9" Style="{StaticResource NumberButtonStyle}"/>
            <Button Grid.Row="2" Grid.Column="3" Content="-" Command="{Binding OperatorCommand}" 
                    CommandParameter="-" Style="{StaticResource OperatorButtonStyle}"/>

            <!-- 네 번째 행 -->
            <Button Grid.Row="3" Grid.Column="0" Content="4" Command="{Binding NumberCommand}" 
                    CommandParameter="4" Style="{StaticResource NumberButtonStyle}"/>
            <Button Grid.Row="3" Grid.Column="1" Content="5" Command="{Binding NumberCommand}" 
                    CommandParameter="5" Style="{StaticResource NumberButtonStyle}"/>
            <Button Grid.Row="3" Grid.Column="2" Content="6" Command="{Binding NumberCommand}" 
                    CommandParameter="6" Style="{StaticResource NumberButtonStyle}"/>
            <Button Grid.Row="3" Grid.Column="3" Content="+" Command="{Binding OperatorCommand}" 
                    CommandParameter="+" Style="{StaticResource OperatorButtonStyle}"/>

            <!-- 다섯 번째 행 -->
            <Button Grid.Row="4" Grid.Column="0" Content="1" Command="{Binding NumberCommand}" 
                    CommandParameter="1" Style="{StaticResource NumberButtonStyle}"/>
            <Button Grid.Row="4" Grid.Column="1" Content="2" Command="{Binding NumberCommand}" 
                    CommandParameter="2" Style="{StaticResource NumberButtonStyle}"/>
            <Button Grid.Row="4" Grid.Column="2" Content="3" Command="{Binding NumberCommand}" 
                    CommandParameter="3" Style="{StaticResource NumberButtonStyle}"/>
            <Button Grid.Row="4" Grid.Column="3" Content="x²" Command="{Binding SquareCommand}" 
                    Style="{StaticResource FunctionButtonStyle}"/>

            <!-- 여섯 번째 행 -->
            <Button Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Content="0" 
                    Command="{Binding NumberCommand}" CommandParameter="0" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Grid.Row="5" Grid.Column="2" Content="." Command="{Binding NumberCommand}" 
                    CommandParameter="." Style="{StaticResource NumberButtonStyle}"/>
            <Button Grid.Row="5" Grid.Column="3" Content="=" Command="{Binding EqualsCommand}" 
                    Style="{StaticResource EqualsButtonStyle}"/>
        </Grid>
    </Grid>
</Window>