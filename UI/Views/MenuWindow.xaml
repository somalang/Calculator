<Window x:Class="Calculator.UI.Views.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator Menu" Height="300" Width="250"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Background="White" ShowInTaskbar="False">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Background" Value="#F8F8F8"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{TemplateBinding Tag}" 
                                           FontSize="18" Margin="0,0,10,0"
                                           VerticalAlignment="Center"/>
                                <ContentPresenter Grid.Column="1" 
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8E8E8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Calculator Features" 
                   FontSize="18" FontWeight="SemiBold" 
                   Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <!-- Menu Items -->
        <StackPanel Grid.Row="1">
            <Button Content="Standard Calculator" 
                    Command="{Binding StandardCalculatorCommand}"
                    Style="{StaticResource MenuButtonStyle}"
                    Tag="🔢"/>

            <Button Content="Advanced Calculator" 
                    Command="{Binding AdvancedCalculatorCommand}"
                    Style="{StaticResource MenuButtonStyle}"
                    Tag="🧮"/>

            <Button Content="Number Base Converter" 
                    Command="{Binding BaseConverterCommand}"
                    Style="{StaticResource MenuButtonStyle}"
                    Tag="🔄"/>

            <Button Content="Bit Operations" 
                    Command="{Binding BitOperationsCommand}"
                    Style="{StaticResource MenuButtonStyle}"
                    Tag="⚡"/>
        </StackPanel>

        <!-- Close Button -->
        <Button Grid.Row="2" Content="Close" 
                Click="CloseButton_Click"
                Height="35" Margin="0,15,0,0"
                Background="#4A90E2" Foreground="White"
                BorderThickness="0" Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#357ABD"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>