<Window x:Class="Calculator.UI.Views.BaseConverterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Calculator.UI.ViewModels"
        Title="Number Base Converter"
        Height="841"
        Width="450"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        MinHeight="400"
        MinWidth="400"
        Background="White">

    <Window.DataContext>
        <vm:BaseConverterViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#D0D0D0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NumberButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#F8F8F8" />
            <Setter Property="Foreground" Value="Black" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8E8E8" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#F0F0F0" />
                    <Setter Property="Foreground" Value="#A0A0A0" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FunctionButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#E8F4FD" />
            <Setter Property="Foreground" Value="#2E7D32" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D1E7DD" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BaseToggleButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderBrush="#D0D0D0"
                                BorderThickness="1"
                                Padding="10,5"
                                Margin="2">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#F8F8F8" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#4A90E2" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8E8E8" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DisplayTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="BorderBrush" Value="#D0D0D0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="#FAFAFA" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="TextAlignment" Value="Right" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Height" Value="40" />
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="BorderBrush" Value="#4A90E2" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Background" Value="White" />
            <Setter Property="TextAlignment" Value="Right" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Height" Value="50" />
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Button
            Command="{Binding OpenMenuCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
            Style="{StaticResource FunctionButtonStyle}"
            Background="Transparent"
            BorderThickness="0"
            Padding="0"
            HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal">
                <Ellipse Width="8" Height="8" Fill="#D0D0D0" Margin="3,0" />
                <Ellipse Width="8" Height="8" Fill="#D0D0D0" Margin="3,0" />
                <Ellipse Width="8" Height="8" Fill="#D0D0D0" Margin="3,0" />
            </StackPanel>
        </Button>
        <TextBlock Grid.Row="0" Text="Number Base Converter" 
                   FontSize="18" FontWeight="SemiBold" 
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Input Section -->
        <GroupBox Grid.Row="1" Header="Input" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <!-- Base Selection -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <RadioButton Content="BIN (2)" 
                                 IsChecked="{Binding IsBinaryInput}"
                                 Style="{StaticResource BaseToggleButtonStyle}"
                                 GroupName="InputBase" />
                    <RadioButton Content="OCT (8)" 
                                 IsChecked="{Binding IsOctalInput}"
                                 Style="{StaticResource BaseToggleButtonStyle}"
                                 GroupName="InputBase" />
                    <RadioButton Content="DEC (10)" 
                                 IsChecked="{Binding IsDecimalInput}"
                                 Style="{StaticResource BaseToggleButtonStyle}"
                                 GroupName="InputBase" />
                    <RadioButton Content="HEX (16)" 
                                 IsChecked="{Binding IsHexInput}"
                                 Style="{StaticResource BaseToggleButtonStyle}"
                                 GroupName="InputBase" />
                </StackPanel>

                <!-- Input Display -->
                <TextBox Text="{Binding InputValue, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource InputTextBoxStyle}"
                         IsReadOnly="False" />
            </StackPanel>
        </GroupBox>

        <!-- Virtual Keyboard -->
        <GroupBox Grid.Row="2" Header="Input Pad" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Row 1: Hex digits A-F -->
                <Button Grid.Row="0" Grid.Column="0" Content="A" 
                        Command="{Binding DigitCommand}" CommandParameter="A"
                        Style="{StaticResource NumberButtonStyle}"
                        IsEnabled="{Binding IsHexDigitEnabled}" />
                <Button Grid.Row="0" Grid.Column="1" Content="B" 
                        Command="{Binding DigitCommand}" CommandParameter="B"
                        Style="{StaticResource NumberButtonStyle}"
                        IsEnabled="{Binding IsHexDigitEnabled}" />
                <Button Grid.Row="0" Grid.Column="2" Content="C" 
                        Command="{Binding DigitCommand}" CommandParameter="C"
                        Style="{StaticResource NumberButtonStyle}"
                        IsEnabled="{Binding IsHexDigitEnabled}" />
                <Button Grid.Row="0" Grid.Column="3" Content="D" 
                        Command="{Binding DigitCommand}" CommandParameter="D"
                        Style="{StaticResource NumberButtonStyle}"
                        IsEnabled="{Binding IsHexDigitEnabled}" />
                <Button Grid.Row="0" Grid.Column="4" Content="E" 
                        Command="{Binding DigitCommand}" CommandParameter="E"
                        Style="{StaticResource NumberButtonStyle}"
                        IsEnabled="{Binding IsHexDigitEnabled}" />
                <Button Grid.Row="0" Grid.Column="5" Content="F" 
                        Command="{Binding DigitCommand}" CommandParameter="F"
                        Style="{StaticResource NumberButtonStyle}"
                        IsEnabled="{Binding IsHexDigitEnabled}" />

                <!-- Row 2: Digits 9-4 -->
                <Button Grid.Row="1" Grid.Column="0" Content="9" 
                        Command="{Binding DigitCommand}" CommandParameter="9"
                        Style="{StaticResource NumberButtonStyle}"
                        IsEnabled="{Binding IsDecimalDigitEnabled}" />
                <Button Grid.Row="1" Grid.Column="1" Content="8" 
                        Command="{Binding DigitCommand}" CommandParameter="8"
                        Style="{StaticResource NumberButtonStyle}"
                        IsEnabled="{Binding IsOctalDigitEnabled}" />
                <Button Grid.Row="1" Grid.Column="2" Content="7" 
                        Command="{Binding DigitCommand}" CommandParameter="7"
                        Style="{StaticResource NumberButtonStyle}"
                        IsEnabled="{Binding IsOctalDigitEnabled}" />
                <Button Grid.Row="1" Grid.Column="3" Content="6" 
                        Command="{Binding DigitCommand}" CommandParameter="6"
                        Style="{StaticResource NumberButtonStyle}"
                        IsEnabled="{Binding IsOctalDigitEnabled}" />
                <Button Grid.Row="1" Grid.Column="4" Content="5" 
                        Command="{Binding DigitCommand}" CommandParameter="5"
                        Style="{StaticResource NumberButtonStyle}"
                        IsEnabled="{Binding IsOctalDigitEnabled}" />
                <Button Grid.Row="1" Grid.Column="5" Content="4" 
                        Command="{Binding DigitCommand}" CommandParameter="4"
                        Style="{StaticResource NumberButtonStyle}"
                        IsEnabled="{Binding IsOctalDigitEnabled}" />

                <!-- Row 3: Digits 3-0, Clear -->
                <Button Grid.Row="2" Grid.Column="0" Content="3" 
                        Command="{Binding DigitCommand}" CommandParameter="3"
                        Style="{StaticResource NumberButtonStyle}"
                        IsEnabled="{Binding IsOctalDigitEnabled}" />
                <Button Grid.Row="2" Grid.Column="1" Content="2" 
                        Command="{Binding DigitCommand}" CommandParameter="2"
                        Style="{StaticResource NumberButtonStyle}"
                        IsEnabled="{Binding IsOctalDigitEnabled}" />
                <Button Grid.Row="2" Grid.Column="2" Content="1" 
                        Command="{Binding DigitCommand}" CommandParameter="1"
                        Style="{StaticResource NumberButtonStyle}"
                        IsEnabled="{Binding IsBinaryDigitEnabled}" />
                <Button Grid.Row="2" Grid.Column="3" Content="0" 
                        Command="{Binding DigitCommand}" CommandParameter="0"
                        Style="{StaticResource NumberButtonStyle}"
                        IsEnabled="{Binding IsBinaryDigitEnabled}" />
                <Button Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" Content="Clear" 
                        Command="{Binding ClearCommand}"
                        Style="{StaticResource FunctionButtonStyle}" />

                <!-- Row 4: Functions -->
                <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Content="Backspace" 
                        Command="{Binding BackspaceCommand}"
                        Style="{StaticResource FunctionButtonStyle}" />
                <Button Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Content="Copy Result" 
                        Command="{Binding CopyCommand}"
                        Style="{StaticResource FunctionButtonStyle}" />
                <Button Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2" Content="Paste" 
                        Command="{Binding PasteCommand}"
                        Style="{StaticResource FunctionButtonStyle}" />
            </Grid>
        </GroupBox>

        <!-- Output Section -->
        <GroupBox Grid.Row="3" Header="Results" Padding="10" Margin="0,10,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="BIN:" FontWeight="SemiBold" VerticalAlignment="Center" Width="50" />
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding BinaryOutput, Mode=OneWay}" Style="{StaticResource DisplayTextBoxStyle}" />

                <TextBlock Grid.Row="1" Grid.Column="0" Text="OCT:" FontWeight="SemiBold" VerticalAlignment="Center" Width="50" />
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding OctalOutput, Mode=OneWay}" Style="{StaticResource DisplayTextBoxStyle}" />

                <TextBlock Grid.Row="2" Grid.Column="0" Text="DEC:" FontWeight="SemiBold" VerticalAlignment="Center" Width="50" />
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding DecimalOutput, Mode=OneWay}" Style="{StaticResource DisplayTextBoxStyle}" />

                <TextBlock Grid.Row="3" Grid.Column="0" Text="HEX:" FontWeight="SemiBold" VerticalAlignment="Center" Width="50" />
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding HexOutput, Mode=OneWay}" Style="{StaticResource DisplayTextBoxStyle}" />
            </Grid>
        </GroupBox>

        <!-- Close Button -->
        <Button Grid.Row="4" Content="Close" 
                Click="CloseButton_Click"
                Height="35" Width="100" Margin="0,15,0,0"
                HorizontalAlignment="Right"
                Background="#4A90E2" Foreground="White"
                BorderThickness="0" Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#357ABD"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>